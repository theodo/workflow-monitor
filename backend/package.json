{
  "name": "caspr-backend",
  "version": "1.0.0",
  "description": "Caspr backend with Serverless",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "sls offline start --useWebsocket",
    "start:dev": "sls offline start --useWebsocket",
    "deploy": "sls deploy --aws-profile MeTheodo",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate": "node_modules/.bin/sequelize db:migrate --env=local"
  },
  "dependencies": {
    "@nestjs/common": "6.2.4",
    "@nestjs/core": "6.2.4",
    "@nestjs/graphql": "^6.2.1",
    "@nestjs/jwt": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "6.2.2",
    "acorn": "^6.1.1",
    "apollo-server-express": "^2.5.0",
    "aws-lambda-graphql": "^0.3.1",
    "aws-sdk": "^2.470.0",
    "aws-serverless-express": "^3.3.5",
    "cookie-parser": "latest",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "passport": "^0.4.0",
    "passport-jwt": "latest",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "6.5.2",
    "sequelize": "^5.9.2",
    "sequelize-typescript": "^0.6.11",
    "serverless": "^1.46.1",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-dynamodb-client": "0.0.2",
    "serverless-offline-sns": "^0.53.0",
    "type-graphql": "^0.17.4",
    "typeorm": "^0.2.18",
    "typescript": "3.4.5",
    "websocket": "latest"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@types/aws-lambda": "^8.10.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "7.10.6",
    "@types/supertest": "^2.0.5",
    "@types/graphql": "^14.2.0",
    "@types/pg": "^7.4.14",
    "@types/sequelize": "^4.28.3",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-localstack": "^0.4.15",
    "serverless-offline": "git://github.com/dherault/serverless-offline.git#websocket-fixes",
    "serverless-offline-dynamodb-streams": "^1.6.2",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "sequelize-cli": "^5.5.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
